{
    "name": "pau/ddd-utilities",
    "description": "Different utilities focused on the development of php applications using DDD",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "pauhoms",
            "email": "pauhomsjimenez1@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "ramsey/uuid": "4.x-dev"
    },
    "autoload": {
        "psr-4": {
            "DDDUtilities\\": ["src"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DDDUtilities\\Tests\\": ["test"]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "10.0.x-dev"
    },
    "scripts": {
        "test": "./vendor/phpunit/phpunit/phpunit"
    }
}
